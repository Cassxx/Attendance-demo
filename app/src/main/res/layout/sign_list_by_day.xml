<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sign_in_bg"
    android:orientation="vertical">

    <com.example.wuzhihan.finalwork.TopBarView
        android:id="@+id/center_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/topbar_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/map_tun_tv"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016年5月26日"
            android:textColor="@color/text"
            android:textSize="16sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/rent_sataion_map"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="160dip" />

        <RelativeLayout
            android:id="@+id/rent_map_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_bg" />

    <!-- 图片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_marginTop="10dip"
        android:background="@color/edittext_bg"
        android:orientation="vertical"
        android:padding="15dip">

        <TextView
            android:id="@+id/field_sign_description"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/edittext_bg"
            android:gravity="top|left"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="无考勤记录" />
    <LinearLayout
        android:id="@+id/field_sign_images_parent"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dip">
        <!-- 图片1 -->
        <FrameLayout
            android:id="@+id/field_sign_image_parent1"
            android:layout_width="56dip"
            android:layout_height="56dip">

            <ImageView
                android:id="@+id/field_sign_image1"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </FrameLayout>
        <!-- 图片2 -->
        <FrameLayout
            android:id="@+id/field_sign_image_parent2"
            android:layout_width="56dip"
            android:layout_height="56dip">

            <ImageView
                android:id="@+id/field_sign_image2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </FrameLayout>
        <!-- 图片3 -->
        <FrameLayout
            android:id="@+id/field_sign_image_parent3"
            android:layout_width="56dip"
            android:layout_height="56dip">

            <ImageView
                android:id="@+id/field_sign_image3"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </FrameLayout>
        <!-- 图片4 -->
        <FrameLayout
            android:id="@+id/field_sign_image_parent4"
            android:layout_width="56dip"
            android:layout_height="56dip">

            <ImageView
                android:id="@+id/field_sign_image4"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:scrollbars="none">
    </LinearLayout>


</LinearLayout>