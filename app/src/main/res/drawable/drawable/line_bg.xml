<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line" >
    <!-- 显示一条虚线，破折线的宽度为dashWith，破折线之间的空隙的宽度为dashGap，
    当dashGap=0dp时，为实线 4.0以后没有虚线效果 -->
    <stroke android:width="1dip" android:color="@color/divider_bg"    
             android:dashWidth="2dip" android:dashGap="3dip" />   
             <!-- 虚线的高度 --> 
    <size android:height="2dip" />
</shape>
